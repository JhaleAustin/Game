<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC107"
    android:padding="16dp"
    tools:context=".Quest4_lvl3">

    <TextView
        android:id="@+id/word_description"
        android:layout_width="168dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="400dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="147dp"
        android:text="Word Description"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/current_guess"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/word_description"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="429dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="163dp"
        android:text="Your Guess"
        android:textSize="18sp" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/current_guess"
        android:layout_alignParentStart="true"
        android:layout_marginStart="337dp"
        android:layout_marginTop="31dp"
        android:onClick="onDeleteClicked"
        android:text="Delete" />

    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/current_guess"
        android:layout_marginStart="36dp"
        android:layout_marginTop="23dp"
        android:layout_toEndOf="@id/delete_button"
        android:onClick="onResetClicked"
        android:text="Reset" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/current_guess"
        android:layout_marginStart="27dp"
        android:layout_marginTop="21dp"
        android:layout_toEndOf="@id/reset_button"
        android:onClick="onSubmitClicked"
        android:text="Submit" />

    <LinearLayout
        android:id="@+id/letters_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/submit_button"
        android:layout_marginTop="-161dp"
        android:orientation="horizontal" />

</RelativeLayout>