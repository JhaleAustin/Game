<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectionQuest">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/blue_simple_birthday_party_invitation__3_" />

    <Button
        android:id="@+id/btnLevel1"
        android:layout_width="247dp"
        android:layout_height="149dp"
        android:layout_marginStart="84dp"
        android:contentDescription="@string/app_name"
        android:layout_marginTop="88dp"
        android:backgroundTint="#00FFFFFF"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnLevel2"
        android:layout_width="247dp"
        android:layout_height="149dp"
        android:layout_marginTop="88dp"
        android:contentDescription="@string/app_name"
        android:backgroundTint="#00FFFFFF"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.683"
        app:layout_constraintStart_toEndOf="@+id/btnLevel1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnLevel3"
        android:layout_width="247dp"
        android:layout_height="149dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="37dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/app_name"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLevel1"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnLevel4"
        android:layout_marginStart="186dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/app_name"
        android:text=""
          app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintStart_toEndOf="@+id/btnLevel3"
        app:layout_constraintTop_toBottomOf="@+id/btnLevel2"
        android:layout_width="247dp"
        android:layout_height="149dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>